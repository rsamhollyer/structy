{
    "env": {
        "commonjs": false,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:node/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "import/extensions": "off",
        "no-restricted-globals": "off",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-plusplus": "off",
        "no-process-exit": "off",
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "node/no-unsupported-features/es-syntax": [
            "error",
            {
                "ignores": [
                    "dynamicImport",
                    "modules"
                ]
            }
        ]
    }
}